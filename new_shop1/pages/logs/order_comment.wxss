/* pages/logs/order_comment.wxss */
.content_container{
  width: 100%;
}
/*标题  */
.write_comment{
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
}
/*打星  */
.star_num{
  height: 100rpx;
  line-height: 100rpx;
  width: 96%;
  margin-left: 2%;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}
.star_num>text{
  width: 200rpx;
  text-align: center;
  float: left;
  height: 100%;
}
.star_num .controll_star{
  height: 100%;
  float: left;
  width: 350rpx;
}
.star_num .controll_star image{
  height: 50rpx;
  margin-top: 25rpx;
  float: left;
  width: 50rpx;
  margin-left: 20rpx;
}
.star_num .the_stardetail{
  width: 150rpx;
  height: 100%;
  float: left;
  text-align: center;
}
.the_word{
  height: 300rpx;
  width: 100%;
}
.the_word textarea{
  height: 96%;
  font-size: 30rpx;
  width: 94%;
  margin-left: 2%;
  display: block;
  border: 1px solid #eee;
}
/*是否匿名  */
.is_username{
  height: 80rpx;
  line-height: 80rpx;
  width: 92%;
  margin-left: 4%;
  font-size: 28rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;

}
.is_username image{
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 10rpx;
}
.is_username text{
  float: left;
  height: 100%;
  margin-left: 10rpx;
}
.is_username view{
  float: right;
  height: 100%;

}
.comment_foot{
  height: 70rpx;
  width: 92%;
  position: fixed;
  font-size: 30rpx;
  bottom: 15rpx;
  left: 4%;
  border-radius: 10rpx;
  background: #f97319;
  color: white;
  text-align: center;
  line-height: 70rpx;
}
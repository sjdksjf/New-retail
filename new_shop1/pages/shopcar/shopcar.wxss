 /*尾部 */
 .shopcar_foot{
   position: fixed;
   height: 90rpx;
   width: 100%;
   background-color: white;
   z-index: 1000;
   bottom: 0;
   line-height: 90rpx;
   left: 0;
   border-top: 0.5px solid #e5e5e5;
 }
 .shopcar_foot text{
   float: left;
 }
 .shopcar_foot .choose{
   width: 40rpx;
   height: 40rpx;
   border-radius: 50%;
   border: 0.5rpx solid #e5e5e5;
   margin-top: 25rpx;
   margin-left: 30rpx;
   float: left;
   position: relative;
 }
 .shopcar_foot .choose image{
   width: 100%;
   position: absolute;
   left: 0;
   top: 0;
   height: 100%;
 }
 .shopcar_foot .goodsnum{
    font-size: 34rpx;
    margin-left: 30rpx;
 }
 .shopcar_foot .money{
   font-size: 34rpx;
   margin-left: 30rpx;
   color: #ff5777;
 }

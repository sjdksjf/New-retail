.shopcar_container{
  height: 100%;
  padding-top: 110rpx;
  /* padding-bottom: 100rpx; */
  background-color: #F8F8FF;
}
.shopcar_container>.shopcar_title{
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
  position: fixed;
  border-bottom: 0.5px solid #e5e5e5;
  left: 0;
  top: 0;
  background-color: white;
  z-index: 1000;
  border-top: 1px solid #eee;
}
.shopcar_container>.shopcar_title text{
  position: absolute;
  height: 40rpx;
  line-height: 40rpx;
  top: 30rpx;
  right: 100rpx;
  font-size: 30rpx;
}
.shopcar_container>.shopcar_title image{
  position: absolute;
  height: 48rpx;
  width: 48rpx;
  left: 34rpx;
  top: 26rpx;
}
/*放入购物车的商品  */
.shopcar_container .shopcar_goods{
  margin-top: 20rpx;
  border-top: 0.5px solid #e5e5e5;
  border-bottom: 0.5px solid #e5e5e5;
  background-color: white;
}


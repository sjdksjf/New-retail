/* pages/order/order_status.wxss */
.status_containter{
  height: 100%;
  width: 100%;
}
.status_containter>view{
  background-color: #ccc;
}
/* 快递标题 */
.status_title{
  background-color: white;
  height: 160rpx;
  width: 100%;
  padding-bottom: 10rpx;
  margin-top: 14rpx;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
}
.status_title image{
  width: 140rpx;
  height: 140rpx;
  float: left;
  margin-left: 16rpx;
}
.status_title>view{
  width: 560rpx;
  float: right;
  height: 160rpx;
}
.status_title>view>text:first-of-type{
  margin-top: 30rpx;
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  width: 100%;
  
}
.status_title>view>text:nth-of-type(2){
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  width: 100%;
  
  
}
.status_title>view>text:nth-of-type(3){
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  width: 100%;
  
  
}
/*物流跟踪  */
.status_detail{
  margin-top: 16rpx;
  background-color: white;
}
.status_detail .detail_name{
  height: 70rpx;
  line-height: 70rpx;
  margin: 2rpx 3%;
  display: block;
  width: 94%;
  font-size: 32rpx;
  border-bottom: 1px solid #ccc;
}
/*单个的详情  */
.address_time{
  padding-top: 20rpx;
  width: 94%;
  position: relative;
  margin: 0 3%;
}
.address_time::after{
  content: '';
  clear: both;
  display: block;
}
.address_time .circle{
  position: absolute;
  top: 30rpx;
  width: 26rpx;
  height: 26rpx;
  background-color: #ccc;
  border-radius: 50%;
  /* box-shadow: 0 0 6rpx 6rpx greenyellow; */
  
}
.address_time .line{
  position: absolute;
  width:2rpx;
  top: 0;
  left: 12rpx;
  height: 100%;
  background-color: #ccc;
}
.address_time .detail_content{
  width: 90%;
  float: right;
  border-bottom: 1px solid #ccc;
}
.address_time .detail_content>view:first-of-type{
  line-height: 60rpx;
  font-size: 32rpx;
  margin-bottom: 12rpx;
}
.address_time .detail_content>view:nth-of-type(2){
  line-height: 50rpx;
  font-size: 28rpx;
  padding-bottom: 16rpx;
}

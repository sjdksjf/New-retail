/* pages/rob_pay/rob_pay.wxss */
.rob_contain{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}
/*抢购轮播图  */
.rob_carousel{
  height: 300rpx;
  width: 100%;
}
.rob_carousel swiper-item,.rob_carousel swiper-item image{
  height: 100%;
  width: 100%;
}
.the_father{
  height: 130rpx;
  width: 100%;
  overflow: auto;
  white-space: nowrap;
  line-height: 65rpx;
}
.the_more_choose{
  width: 94%;
  padding: 0 3%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-top: 1px solid #ccc;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #ccc;
  margin-top: 200rpx;
}
.the_child{
  width: 150rpx;
  display: inline-block;
  text-align: center;
  background-color: #ccc;
  margin-left: 20rpx;
  height: 100%;
  color: white;
  position: relative;
}
.the_child text{
  position: absolute;
  width: 100%;
  height: 65rpx;
  left: 0;
  bottom: 0;
  font-size: 28rpx;
}

view.child_color{
  background-color: #ff5777;
}
/*倒计时  */
.the_timeless{
  margin-top: 20rpx;
  font-size: 32rpx;
  width: 94%;
  padding-left: 3%;
  height: 60rpx;
  line-height: 60rpx;
}
/*抢杀列表  */
.goods_list{
  margin-top: 20rpx;
}
.the_prompt_more{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 60rpx;
  text-align: center;
}
.goods_list .goods_content{
  height: 270rpx;
  width: 100%;
  position: relative;
  margin-bottom: 12rpx;
  border-top: 1px solid #ccc;
  /* border-bottom: 1px solid #ccc; */
  }
  .goods_content image{
    height: 250rpx;
    float: left;
    width: 180rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;

  }
  .goods_content>view{
    width: 520rpx;
    height: 270rpx;
    float: left;
    margin-left: 20rpx;
    font-size: 30rpx;
    line-height: 54rpx;
  }
  .goods_title{
    height: 54rpx;
    overflow: hidden;
    white-space: nowrap;
      margin-left: 15rpx;
      text-overflow: ellipsis;
    }
    .goods_desc{
      margin-left: 15rpx;
      height: 54rpx;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      /* display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden */
    }
    .goods_status{
      height: 54rpx;
      margin-left: 15rpx;
      

    }
    .goods_status text{
      float: right;
    }
    .goods_num{
      height: 54rpx;
    }
    .goods_num text {
      margin-left: 15rpx;
    }
    .goods_price text:first-child{
      margin-left: 15rpx;
      color: red;
      display: block;
      font-size: 32rpx;
    }
    .goods_price text:nth-child(2){
      text-decoration: line-through;
      margin-left: 15rpx;
      font-size: 26rpx;
      display: block;
    }
    .rob_now{
      position: absolute;
      font-size: 30rpx;
      padding: 8rpx 16rpx;
      right: 16rpx;
      bottom: 24rpx;
      background-color: #ff5777;
      color: white;
    }